---
layout: layouts/base.njk
pagination:
  data: collections.allSecondaryTags
  size: 1
  alias: secondaryTag
permalink: /secondary-tags/{{ secondaryTag }}/
---

<div class="container">
    <header class="category-header">
        <h1>Tagged "{{ secondaryTag }}"</h1>
        <p class="category-description">
            Posts tagged with "{{ secondaryTag }}"
        </p>
    </header>
    
    <div class="posts-grid">
        {% set postsWithTag = collections.all | filterBySecondaryTag(secondaryTag) %}
        {% for post in postsWithTag | reverse %}
        <article class="post-card">
            <h3>
                <a href="{{ post.url }}">{{ post.data.title }}</a>
            </h3>
            
            <div class="post-meta">
                <time datetime="{{ post.date | htmlDateString }}">
                    {{ post.date | readableDate }}
                </time>
                
                {% if post.data.tags %}
                <div class="post-tags">
                    {% for tag in post.data.tags %}
                    {% if tag != "posts" %}
                    <span class="tag">#{{ tag }}</span>
                    {% endif %}
                    {% endfor %}
                </div>
                {% endif %}

                {% if post.data.secondary_tags %}
                <div class="secondary-tags">
                    {% for stag in post.data.secondary_tags %}
                    <span class="secondary-tag">{{ stag }}</span>
                    {% endfor %}
                </div>
                {% endif %}
            </div>
            
            {% if post.data.excerpt %}
            <p class="post-excerpt">{{ post.data.excerpt }}</p>
            {% else %}
            <p class="post-excerpt">{{ post.templateContent | excerpt }}</p>
            {% endif %}
        </article>
        {% endfor %}
        
        {% if postsWithTag.length == 0 %}
        <div class="no-posts">
            <p>No posts with this secondary tag yet.</p>
            <a href="/" class="button">Back to Home</a>
        </div>
        {% endif %}
    </div>
</div>
