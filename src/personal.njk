---
layout: layouts/category.njk
title: "Personal"
description: "Personal thoughts, experiences, and reflections"
permalink: "/personal/"
---

<div class="container">

  <div>
    {% for post in collections.posts %}
    {% if post.data.tags %}
    {% set hasPersonalTag = false %}
    {% for tag in post.data.tags %}
    {% if tag == "personal" %}
    {% set hasPersonalTag = true %}
    {% endif %}
    {% endfor %}

    {% if hasPersonalTag %}
    <article class="post-card">
      <h3>
        <a href="{{ post.url }}">{{ post.data.title }}</a>
      </h3>

      <div class="post-meta">
        <time datetime="{{ post.date | htmlDateString }}">
          {{ post.date | readableDate }}
        </time>

      </div>

      {% if post.data.excerpt %}
      <p class="post-excerpt">{{ post.data.excerpt }}</p>
      {% endif %}
    </article>
    {% endif %}
    {% endif %}
    {% endfor %}
  </div>

  <!-- Check if no posts were found -->
  {% for post in collections.posts %}
  {% if post.data.tags %}
  {% for tag in post.data.tags %}
  {% if tag == "personal" %}
  {% set foundPersonalPosts = true %}
  {% endif %}
  {% endfor %}
  {% endif %}
  {% endfor %}
</div>