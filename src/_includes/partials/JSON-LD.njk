{% if layout == "layouts/post.njk" %}
<!-- Dynamic Schema for Individual Posts -->
<script type="application/ld+json">
  {
    "@context": "https://schema.org",
    "@type": "{% if schema_type %}{{ schema_type }}{% else %}BlogPosting{% endif %}",
    "headline": "{{ title }}",
    "description": "{% if excerpt %}{{ excerpt }}{% else %}{{ site.description }}{%
  endif %}",
    "url": "{{ site.url }}{{ page.url }}",
    "datePublished": "{{ date | htmlDateString }}",
    "dateModified": "{{ date | htmlDateString }}",
    {% if schema_type == "TechArticle" %}
    "dependencies": {% if dependencies %}"{{ dependencies }}"{% else %}"Web Development, JavaScript"{% endif %},
    "proficiencyLevel": "{% if proficiency_level %}{{ proficiency_level }}{% else %}Intermediate{% endif %}",
    "applicationCategory": "WebApplication",
    {% endif %}
    {% if schema_type == "HowTo" %}
    "totalTime": "{% if total_time %}{{ total_time }}{% else %}PT15M{% endif %}",
    {% if supplies %}
    "supply": [
      {% for supply in supplies %}
      {
        "@type": "HowToSupply",
        "name": "{{ supply }}"
      }{% if not loop.last %},{% endif %}
      {% endfor %}
    ],
    {% endif %}
    {% if tools %}
    "tool": [
      {% for tool in tools %}
      {
        "@type": "HowToTool",
        "name": "{{ tool }}"
      }{% if not loop.last %},{% endif %}
      {% endfor %}
    ],
    {% endif %}
    {% if steps %}
    "step": [
      {% for step in steps %}
      {
        "@type": "HowToStep",
        "name": "{{ step.name }}",
        "text": "{{ step.text }}"
      }{% if not loop.last %},{% endif %}
      {% endfor %}
    ],
    {% endif %}
    {% endif %}
    "author": {
      "@type": "Person",
      "name": "Kai Gittens",
      "url": "https://kaidez.com",
      "sameAs": [
        "https://x.com/kaidez",
        "https://www.facebook.com/kaidezblog",
        "https://www.linkedin.com/in/kaigittens/",
        "https://bsky.app/profile/kaidezg.bsky.social",
        "https://github.com/kaidez"
      ]
    },
    "publisher": {
      "@type": "Person",
      "name": "Kai Gittens"
    },
    "mainEntityOfPage": {
      "@type": "WebPage",
      "@id": "{{ site.url }}{{ page.url }}"
    },
    "inLanguage": "en"
  }
  </script>

