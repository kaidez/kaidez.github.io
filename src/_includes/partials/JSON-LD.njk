{% if layout == "layouts/post.njk" %}
<!-- BlogPosting Schema for Individual Posts -->
<script type="application/ld+json">
  {
    "@context": "https://schema.org",
    "@type": "BlogPosting",
    "headline": "{{ title }}",
    "description": "{% if excerpt %}{{ excerpt }}{% else %}{{ site.description }}{% 
  endif %}",
    "url": "{{ site.url }}{{ page.url }}",
    "datePublished": "{{ date | htmlDateString }}",
    "dateModified": "{{ date | htmlDateString }}",
    "author": {
      "@type": "Person",
      "name": "Kai Gittens",
      "url": "https://kaidez.com",
      "sameAs": [
        "https://x.com/kaidez",
        "https://www.facebook.com/kaidezblog",
        "https://www.linkedin.com/in/kaigittens/",
        "https://bsky.app/profile/kaidezg.bsky.social",
        "https://github.com/kaidez"
      ]
    },
    "publisher": {
      "@type": "Person",
      "name": "Kai Gittens"
    },
    "mainEntityOfPage": {
      "@type": "WebPage",
      "@id": "{{ site.url }}{{ page.url }}"
    },
    "inLanguage": "en"
  }
  </script>

