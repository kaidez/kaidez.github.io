<!DOCTYPE html>
<html lang="en">

<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">

  <title>{% if title %}{{ title }} - {% elif tagName %} Posts tagged as '{{ tagName }}' - {% else %}{% endif %}{{ site.title }}</title>

  <meta name="description" content="{% if excerpt %}{{ excerpt }}{% elif tagName %} Posts tagged as '{{ tagName }}' on kaidez.com {% else %}{{ site.description }}{% endif %}">

  <!-- Open Graph -->
  <meta property="og:title" content="{% if title %}{{ title }}{% else %}{{ site.title }}{% endif %}">
  <meta property="og:description" content="{% if excerpt %}{{ excerpt }}{% elif tagName %} Posts tagged as {{ tagName }} on kaidez.com {% else %}{{ site.description }}{% endif %}">
  <meta property="og:type" content="website">
  <meta property="og:url" content="{{ site.url }}{{ page.url }}">
  <meta property="og:image" content="https://kaidez.com/assets/img/{% if image %}{{ image }}{% else %}default-og.jpg{% endif %}" />
  <meta property="og:image:width" content="1200" />
  <meta property="og:image:height" content="630" />
  <meta property="og:image:alt" content="{% if title %}{{ title }}{% else %}{{ site.title }}{% endif %}" />

  <!-- Canonical Link -->
  <link rel="canonical" href="{{ site.url }}{{ page.url }}">

  <!-- Fonts -->
  <link rel="preconnect" href="https://fonts.googleapis.com">
  <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
  <link rel="dns-prefetch" href="https://fonts.googleapis.com">
  <link href="https://fonts.googleapis.com/css2?family=Jost:ital,wght@0,100..900;1,100..900&display=swap" rel="stylesheet">

  <!-- Preload critical resources -->
  <link rel="preload" href="/assets/css/style.css" as="style">
  <link rel="preload" href="/assets/js/main.js" as="script">

  <!-- Styles -->
  <link rel="stylesheet" href="/assets/fontawesome/css/all.min.css">
  <link rel="stylesheet" href="/assets/css/style.css">

  <!-- Favicon -->
  <link rel="icon" type="image/x-icon" href="/assets/images/favicon.ico">

  <meta property="article:publisher" content="https://facebook.com/kaidezblog" />
  <meta property="article:section" content="Web Development" />
  <meta name="twitter:card" content="summary_large_image" />
  <meta name="twitter:site" content="@kaidez" />
  <meta name="twitter:creator" content="@kaidez" />
  <meta name="twitter:title" content="{% if title %}{{ title }}{% else %}{{ site.title }}{% endif %}" />
  <meta name="twitter:image"
    content="https://kaidez.com/assets/img/{% if image %}{{ image }}{% else %}default-og.jpg{% endif %}" />
  <meta name="twitter:description" content="{% if excerpt %}{{ excerpt }}{% elif tagName %} Posts tagged as {{ tagName }} on kaidez.com {% else %}{{ site.description }}{% endif %}">
  {% include "partials/JSON-LD.njk" %}
  {% include "partials/googleAnalytics.njk" %}
</head>

<body class="{% if bodyClass %}{{ bodyClass }}{% endif %}">
  <a href="#main-content" class="skip-link">Skip to main content</a>
  {% include "partials/header.njk" %}

  <main class="main-content" id="main-content" role="main" aria-label="Main content">
    {{ content | safe }}
  </main>

  {% include "partials/footer.njk" %}

  <script src="/assets/js/main.js" defer></script>

</body>

</html>