---
layout: layouts/base.njk
title: Tutorials & Articles about Web Development - kaidez
permalink: "/{% if pagination.pageNumber > 0 %}/page-{{ pagination.pageNumber }}{% endif %}/index.html"
pagination:
  data: collections.posts
  size: 10
  alias: posts
---

<section class="container">
  <h1 class="header-content--hidden-text">View the last 10 posts on kaidez.com</h1>
  <div class="posts-homepage-post-list">
    {% for post in collections.posts | head(10) %}
    <article class="post-card">
      <h3>
        <a href="{{ post.url }}">{{ post.data.title }}</a>
      </h3>

      <div class="post-meta">
        <time datetime="{{ post.date | htmlDateString }}">
          {{ post.date | readableDate }}
        </time>
      </div>

      {% if post.data.excerpt %}
      <p class="post-excerpt">{{ post.data.excerpt }}</p>
      {% else %}
      <p class="post-excerpt">{{ post.templateContent | excerpt }}</p>
      {% endif %}
    </article>
    {% endfor %}
  </div>

  <div class="previous-next-button-container">
    <div class="previous-next-button">
      {% if pagination.href.previous %}<a href="{{ pagination.href.previous }}" class="pagination-buttons"><i class="fa-solid fa-arrow-left-long"></i> PREVIOUS PAGE</a>{% endif %}
    </div>
    <div class="previous-next-button">
      {% if pagination.href.next %}<a href="{{ pagination.href.next }}" class="pagination-buttons">NEXT PAGE <i class="fa-solid fa-arrow-right-long"></i></a>{% endif %}</div>
  </div>
</section>