{
  "name": "kaidez.com",
  "version": "4.0.0",
  "description": "Personal blog of Kai Gittens",
  "repository": "https://github.com/kaidez/kaidez.github.io.git",
  "scripts": {
    "start": "eleventy --serve --port=8080",
    "build": "eleventy",
    "build:prod": "NODE_ENV=production eleventy && npm run purge-css && npm run minify-js",
    "purge-css": "purgecss --css _site/assets/css/style.css --content '_site/**/*.html' --output _site/assets/css/ --safelist 'fas fab far fa-facebook fa-twitter fa-linkedin fa-github fa-envelope fa-bars fa-times skip-link sr-only visually-hidden container' && cleancss -o _site/assets/css/style.css _site/assets/css/style.css",
    "minify-js": "esbuild _site/assets/js/main.js --minify --allow-overwrite --outfile=_site/assets/js/main.js",
    "clean": "rm -rf _site",
    "deploy": "npm run build:prod && gh-pages -d _site",
    "deploy:dev": "git checkout dev-branch && git pull origin dev-branch",
    "deploy:merge": "git checkout main && git pull origin main && git merge dev-branch",
    "deploy:push": "git push origin main",
    "deploy:full": "npm run deploy:merge && npm run deploy:push",
    "deploy-and-switch": "npm run deploy:full && deploy:dev",
    "test": "jest",
    "test:watch": "jest --watch",
    "debug11ty": "ELEVENTY_DEBUG=true eleventy",
    "verboseDebug": "DEBUG=Eleventy* npx @11ty/eleventy"
  },
  "devDependencies": {
    "@11ty/eleventy": "^3.1.2",
    "@11ty/eleventy-plugin-syntaxhighlight": "^5.0.2",
    "@babel/preset-env": "^7.28.3",
    "@quasibit/eleventy-plugin-sitemap": "^2.2.0",
    "clean-css-cli": "^5.6.3",
    "esbuild": "^0.25.10",
    "gh-pages": "^6.3.0",
    "html-minifier": "^4.0.0",
    "jest": "^30.1.3",
    "jest-environment-jsdom": "^30.1.2",
    "luxon": "^3.7.2",
    "markdown-it": "^14.1.0",
    "moment": "^2.30.1",
    "purgecss": "^7.0.2"
  },
  "keywords": [
    "11ty",
    "eleventy",
    "blog",
    "static-site"
  ],
  "author": "Kai Gittens",
  "license": "MIT",
  "main": "index.js",
  "type": "commonjs",
  "dependencies": {
    "@11ty/eleventy-plugin-rss": "^2.0.4",
    "@fortawesome/fontawesome-free": "^7.0.1",
    "eleventy-plugin-reading-time": "^0.0.1"
  }
}